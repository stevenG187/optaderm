{"components/common/subscription-form":"<!-- <h3 class=\"footer-info-heading\">{{lang 'newsletter.subscribe'}}</h3> \r\n<p>{{lang 'newsletter.subscribe_intro'}}</p> -->\r\n<h3>Keep up with the latest Optaderm products, skincare tips, exclusive offers, and more.</h3>\r\n\r\n<form class=\"form\" action=\"{{urls.subscribe.action}}\" method=\"post\">\r\n    <fieldset class=\"form-fieldset\">\r\n        <input type=\"hidden\" name=\"action\" value=\"subscribe\">\r\n        <input type=\"hidden\" name=\"nl_first_name\" value=\"bc\">\r\n        <input type=\"hidden\" name=\"check\" value=\"1\">\r\n        <div class=\"form-field\">\r\n            <label class=\"form-label is-srOnly\" for=\"nl_email\">{{lang 'common.email_address'}}</label>\r\n            <div class=\"form-prefixPostfix wrap\">\r\n                <input class=\"form-input\"\r\n                       id=\"nl_email\"\r\n                       name=\"nl_email\"\r\n                       type=\"email\"\r\n                       value=\"{{customer.email}}\"\r\n                       placeholder=\"Email Address\"\r\n                       aria-describedby=\"alertBox-message-text\"\r\n                       aria-required=\"true\"\r\n                       autocomplete=\"email\"\r\n                       required\r\n                >\r\n                <input class=\"button button--primary form-prefixPostfix-button--postfix\"\r\n                       type=\"submit\"\r\n                       value=\"Sign me up\"\r\n                >\r\n            </div>\r\n            {{#if settings.show_newsletter_summary }}\r\n                <div class=\"footer-newsletter-summary\">{{settings.newsletter_summary}}</div>\r\n            {{/if}}\r\n        </div>\r\n        \r\n        <!-- Terms input section -->\r\n        <div class=\"form-field\">\r\n            <label for=\"terms-checkbox\" class=\"form-label\">\r\n                <input type=\"checkbox\" id=\"terms-checkbox\" name=\"terms\" required>\r\n                I have read and agree to the <a href=\"/terms-of-service\" target=\"_blank\">terms of service</a> and <a href=\"/privacy-policy\" target=\"_blank\">privacy policy</a>, and agree to receive emails.\r\n            </label>\r\n        </div>\r\n    </fieldset>\r\n</form>"}
